// SCC test, with a simple long cycle

N = 100000

V1 = 1
V2 = N+V1
V3 = N-1+V2
V4 = 1+V3

E1 = 1
E2 = N-1+E1
E3 = N-1+E2
E4 = 1+E3
E5 = 1+E4

off1b = r(V1, 1)-E1
off2b = r(V2, 1)-E2-1
off3b = r(V3, 1)-E3
off4b = r(V2, 1)-E4
off5b = r(V4, 1)-E5

off1d = r(V2, 1)-E1-N+1
off2d = r(V3, 1)-E2
off3d = r(V2, 1)-E3
off4d = r(V4, 1)-E4
off5d = r(V1, 1)-E5

V %= {[1:1:V1], [V1+1:1:V2], [V2+1:1:V3], [V3+1:1:V4]};
Vmap %= <<{[1:1:V1]} -> 0*x+1, {[V1+1:1:V2]} -> 0*x+2, {[V2+1:1:V3]} -> 0*x+3
  , {[V3+1:1:V4]} -> 0*x+4>>; 
mapB %= <<{[1:1:E1]} -> 1*x+off1b, {[E1+1:1:E2]} -> 1*x+off2b, {[E2+1:1:E3]} -> 1*x+off3b
  , {[E3+1:1:E4]} -> 1*x+off4b, {[E4+1:1:E5]} -> 1*x+off5b>>;
mapD %= <<{[1:1:E1]} -> 1*x+off1d, {[E1+1:1:E2]} -> 1*x+off2d, {[E2+1:1:E3]} -> 1*x+off3d
  , {[E3+1:1:E4]} -> 1*x+off4d, {[E4+1:1:E5]} -> 1*x+off5d>>;
Emap %= <<{[1:1:E1]} -> 0*x+1, {[E1+1:1:E2], [E2+1:1:E3]} -> 0*x+2, {[E3+1:1:E4]} -> 0*x+3
  , {[E4+1:1:E5]} -> 0*x+4>>;

scc(
V %= {[1:1:V1], [V1+1:1:V2], [V2+1:1:V3], [V3+1:1:V4]};
Vmap %= <<{[1:1:V1]} -> 0*x+1, {[V1+1:1:V2]} -> 0*x+2, {[V2+1:1:V3]} -> 0*x+3
  , {[V3+1:1:V4]} -> 0*x+4>>; 
mapB %= <<{[1:1:E1]} -> 1*x+off1b, {[E1+1:1:E2]} -> 1*x+off2b, {[E2+1:1:E3]} -> 1*x+off3b
  , {[E3+1:1:E4]} -> 1*x+off4b, {[E4+1:1:E5]} -> 1*x+off5b>>;
mapD %= <<{[1:1:E1]} -> 1*x+off1d, {[E1+1:1:E2]} -> 1*x+off2d, {[E2+1:1:E3]} -> 1*x+off3d
  , {[E3+1:1:E4]} -> 1*x+off4d, {[E4+1:1:E5]} -> 1*x+off5d>>;
Emap %= <<{[1:1:E1]} -> 0*x+1, {[E1+1:1:E2], [E2+1:1:E3]} -> 0*x+2, {[E3+1:1:E4]} -> 0*x+3
  , {[E4+1:1:E5]} -> 0*x+4>>;
)
